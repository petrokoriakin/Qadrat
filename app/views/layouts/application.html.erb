<!DOCTYPE html>
<html>
<head>
  <title>MyBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<body>
  <div id="sidebar">
    <ul>
      <li class="category">Website</li>
      <% if user_signed_in? %>
        <li><%= link_to "Profile", user_path(current_user.id) %></li>
        <li><%= link_to "My feed", myfeed_path %></li>
      <% end %>
      <li><%= link_to "The Wall", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>

    <!-- <ul>
      <li class="category">Social</li>
      <li><a href="https://www.facebook.com/mal.worm">Facebook</a></li>
      <li><a href="https://www.instagram.com/bg.mi/">Instagram</a></li>
      <li><a href="https://github.com/malworm">Github</a></li>
      <li><a href="mailto:snowbars125@gmail.com">Email</a></li>
    </ul>
    <p class="sign_in">Admin Login</p> -->
  </div>

  <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
        <p><strong>All Posts</strong></p>
      <% elsif current_page?(about_path) %>
        <p> <strong>About</strong></p>
      <% else %>
        <strong><%= link_to "Back to All Posts", root_path %></strong>
      <% end %>

      <% if user_signed_in? %>
        <div class="buttons">
          <%= link_to "New Post", new_post_path, class: 'button'%>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'button'%>
        </div>
      <% else %>
        <div class="buttons">
          <%= link_to "Log In", new_user_session_path, class: 'button' %>
        </div>
      <% end %>
    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
