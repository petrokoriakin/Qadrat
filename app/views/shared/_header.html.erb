<div id="header">
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper deep-purple lighten-2">
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <% if !user_signed_in? %>
            <a href="<%= root_path%>">
              <i class="large material-icons">home</i>
            </a>
          <% end -%>
        </ul>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if user_signed_in? %>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "grey-text text-lighten-4" %></li>
          <% else %>
            <li><%= link_to "Log In", new_user_session_path, class: "grey-text text-lighten-4" %></li>
          <% end -%>
        </ul>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <%if user_signed_in? %>
            <li>
              <a class="dropdown-button" href="#" data-activates="mydropdown"><i class="large material-icons">account_circle</i></a>
              <script>
                $(".dropdown-button").dropdown();
              </script>
            </li>
          <% end -%>
        </ul>
        <% if user_signed_in? %>
          <ul class="dropdown-content" id="mydropdown">
            <li><%= link_to "Profile", user_path(current_user.id) %></li>
            <li><%= link_to "My feed", myfeed_path %></li>
            <li class="divider"></li>
            <li><%= link_to "The Wall", root_path %></li>
          </ul>
        <% end -%>
      </div>
    </nav>
  </div>
</div>
