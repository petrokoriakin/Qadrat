<div class="card">
  <div class="card-content">
    <%= form_for [@post, @post.comments.build] do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :body %><br>
          <%= f.text_area :body, class: 'materialize-textarea' %>
        </div>
      </div>
      <%= f.submit "Comment", class: 'btn btn waves-effect waves-light btn deep-purple accent-2' %>
    <% end %>
  </div>
</div>
