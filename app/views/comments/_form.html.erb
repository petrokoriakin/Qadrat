<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="row">
    <div class="input-field col s6">
      <%= f.label :body %><br>
      <%= f.text_area :body, class: 'materialize-textarea' %>
    </div>
  </div>

  <button class="btn waves-effect waves-light" type="submit" name="action">
    <%= f.submit "Comment" %>
  </button>
<% end %>


