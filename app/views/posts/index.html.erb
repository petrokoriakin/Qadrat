<% @posts.each do |post| %>
  <div class="post_wrapper">
  <p>
    Tags: <%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
  </p>
    <h2 class="title">
      <%= link_to post.title, post %>
    </h2>
    <p class="date">
      <%= post.created_at.strftime(" %B, %d, %Y") %>
    </p>
  </div>
<% end %>
