<div class="post_wrapper">
  <h4>
    <strong>Tag: <%= @tagname %></strong>
  </h4>

  <% if user_signed_in? %>
    <% if current_user.is_following(current_user.id, @tag.id) %>
      <%= button_to "Unfollow", unfollow_tag_path(@tagname), method: :post, class: 'waves-effect waves-light btn' %>
    <% else %>
      <%= button_to "Follow", follow_tag_path(@tagname), method: :post, class: 'waves-effect waves-light btn' %>
    <% end %>
  <% end %>

  <br>
  <% @posts.each do |post| %>
    <div class="col-md-4 text-center">
          <div class="col s12 m7">
            <div class="card">
              <div class="card-content">
                <p><%= link_to post.titleValid, post %></p>
                <p><%= post.created_at.strftime(" %B, %d, %Y") %></p>
              </div>
              <div class="card-action">
                 <p>
                  Tags: <%= link_to post.tags.first.name, tag_path(post.tags.first.name) %>
                  <% if (post.tags.map.size - 1) > 0 %>
                    + <%= post.tags.map.size - 1 %> more
                  <% end -%>
                </p>
              </div>
            </div>
          </div>
    </div>
  <% end %>
</div>

<div class="fixed-action-btn horizontal" style="bottom: 90px; right: 24px;">
    <a href="/posts/new" class="btn-floating btn-large red">
      <i class="large material-icons">mode_edit</i>
    </a>
</div>
